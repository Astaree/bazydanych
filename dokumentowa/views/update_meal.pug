extends layout

block content
  div.wrapper
    h1 Update Meal
    form(action=`/api/edit_meal/${meal._id}`, method="POST")
      label(for="name") Name:
      input(type="text", name="name", required="true", value=meal.name)

      label(for="description") Description:
      input(type="text", name="description", value=meal.description)

      label(for="averageTimeToCook") Average Time to Cook:
      input(type="number", name="averageTimeToCook", required="true", value=meal.averageTimeToCook)

      label(for="price") Price:
      input(type="number", name="price", required="true", value=meal.price)

      input(type="submit", value="Update Meal")
