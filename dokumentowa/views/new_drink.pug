extends layout 
block content
  div.wrapper
    form(action="/api/new_drink", method="POST")
      label(for="name") Name:
      input(type="text", name="name", id="name")
      label(for="type") Type:
      input(type="text", name="type", id="type")
      label(for="price") Price:
      input(type="number", name="price", id="price")
      input(type="submit", value="Submit")